<%- include("partials/header") %>

    <main class="page registration-page">
        <section class="clean-block clean-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info">Registration</h2>
                    <p>Please Enter all your details carefully for faster acceptance of registrations.</p>
                </div>
                <form class="col-6" style="max-width: 100%" method="post" action="/register">
                    <div class="mb-3">
                        <label class="form-label" for="title">Patient Title</label>
                        <select id="title" name="title" class="form-select me-sm-0">
                            <optgroup label="This is a group">
                                <option value="Mr." selected="">Mr.</option>
                                <option value="Ms.">Ms.</option>
                                <option value="Kumar">Kumar</option>
                                <option value="Kumari">Kumari</option>
                            </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Patient Name</label>
                        <input class="form-control item" type="text" name="patientName" id="name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <select name="gender" class="form-select me-sm-0">
                            <optgroup label="This is a group">
                                <option value="Male" selected="">Male</option>
                                <option value="Female">Female</option>
                                <option value="Non-binary">Non-binary</option>
                                <option value="Others">Others</option>
                                <option value="Prefer-not-to-say">Prefer Not to Say</option>
                            </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Martial Status</label>
                        <select name="martialStatus" class="form-select me-sm-0">
                            <optgroup label="This is a group">
                                <option value="Married" selected="">Married</option>
                                <option value="Unmarried">Unmarried</option>
                            </optgroup>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date of Birth</label>
                        <input class="form-control item" type="date" id="birthday" name="birthday">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="nationality">Nationality</label>
                        <input class="form-control item" type="text" name="nationality" id="nationality">
                    </div>
                    <div class="mb-3"><label class="form-label" for="religion">Religion</label>
                        <input class="form-control item" type="text" name="religion" id="religion">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="patientOccupation">Patient's Occupation</label>
                        <input class="form-control item" type="text" name="patientOccupation" id="patientOccupation">
                    </div>
                    <div class="mb-3"><label class="form-label" for="relativeName">Relative's Name</label>
                        <input class="form-control item" type="text" name="relativeName" id="relativeName">
                    </div>
                    <div class="mb-3"><label class="form-label" for="relation">Relation</label>
                        <input name="relation" class="form-control item" name="relation" type="text" id="relation">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </section>
    </main><!-- Start: Footer Dark -->

<%- include("partials/footer") %>