<%- include("partials/header") %>

    <main class="page registration-page">
        <section class="clean-block clean-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info">Your Condition</h2>
                </div>
                <form class="col-6" style="max-width: 100%" method="post" action="/register">
                    <div class="mb-3">
                        <label class="form-label">Disease name: </label>
                        <input class="form-control item" type="text" name="patientName" id="name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="title">Explain your condition: </label>
                        <textarea class="form-control item" name="explanation" id="" cols="30" rows="10"></textarea>
                    </div>
                    
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </section>
    </main><!-- Start: Footer Dark -->

<%- include("partials/footer") %>